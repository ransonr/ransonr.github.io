{% macro html_title() %}
    {% if title and not post.meta('hidetitle') %}
        <div class="page-header">
            <h1 class="entry-title">{{ post.title()|e }}</h1>
            <p class="text-muted">
                <time class="dt-published">{{ post.formatted_date(date_format)|e }}</time>
            </p>
        </div>
    {% endif %}

{% endmacro %}
